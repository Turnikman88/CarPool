@model IEnumerable<ReportedDTO>

<table class="table-custom">
    <tr>
        <th>Picture</th>
        <th>Email</th>
        <th>Reason</th>
        <th></th>
    </tr>

    @foreach (var rep in Model)
    {
        <tr>
            <td>
                <img src="@rep.Picture" style="border-radius: 50%; height:40px;" />
            </td>

            <td>
                @rep.Email
            </td>

            <td>
                @rep.Reason
            </td>
            <td>
                <button style="background-color: red!important"
                        class="btn-default btn-details" onclick="showInPopup('@Url.Action("Ban", "Ban")', 'Ban')">
                    Ban
                </button>
            </td>
        </tr>
    }
</table>
