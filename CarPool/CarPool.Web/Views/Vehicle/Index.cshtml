@model UserVehicleViewModel

@{ Layout = "/Views/Shared/_LayoutEmpty.cshtml"; }

<form asp-action="Index" asp-route-id="@Model.Id" class="contact-form-1 rwt-dynamic-form" onsubmit="return jQueryAjaxPost(this);">

    <table class="table-custom">
        <tr>
            <th>Model</th>
            <th>Color</th>
            <th>L/100km</th>
        </tr>
        <tr>
            <td>
                <div class="form-group pic">
                    <input asp-for="CarModel" placeholder="Model" accept="image/*">
                </div>
            </td>

            <td>
                <div class="form-group personal">
                    <input asp-for="Color" placeholder="Color">
                </div>
            </td>

            <td>
                <div class="form-group personal">
                    <input asp-for="FuelConsumptionPerHundredKilometers" placeholder="L/100km">
                </div>
            </td>
        </tr>
    </table>

    <div asp-validation-summary="All" class="form-error"></div>

    <div style="display:flex; justify-content:center;">
        <div class="form-group">
            <button type="submit" class="btn-default btn-large rn-btn"
                    style="background-color: #FF3CAC; cursor: pointer;">
                <span>Save</span>
            </button>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

 